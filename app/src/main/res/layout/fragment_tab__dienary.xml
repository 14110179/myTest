<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.thanh.mytest_phungduythanh.Fragment.Tab_Dienary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:scaleType="fitXY"
            android:src="@drawable/hinh4"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            />
        <TextView
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/While"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="100dp"
            android:text="Diets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:id="@+id/file"
            android:background="@color/While3"
            android:weightSum="6"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="140dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginBottom="2dp"
                android:background="@color/While"
                android:paddingLeft="20dp"
                android:gravity="center|left"
                android:text="Lacto Vegetarian"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginBottom="2dp"
                android:background="@color/While"
                android:paddingLeft="20dp"
                android:gravity="center|left"
                android:text="Vegetarian"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginBottom="2dp"
                android:background="@color/While"
                android:paddingLeft="20dp"
                android:gravity="center|left"
                android:text="Ovo Vegetarian"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginBottom="2dp"
                android:background="@color/While"
                android:paddingLeft="20dp"
                android:gravity="center|left"
                android:text="Paleo"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginBottom="2dp"
                android:background="@color/While"
                android:paddingLeft="20dp"
                android:gravity="center|left"
                android:text="Pescetarian"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:background="@color/While"
                android:paddingLeft="20dp"
                android:gravity="center|left"
                android:text="Vegan"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>
